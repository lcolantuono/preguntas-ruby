<head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
	<h2 class="col-md-12" style="display: flex; justify-content: center; margin-bottom: 40px">Preguntontis</h2>
	<h1 class="col-md-12" style="display: flex; justify-content: center; margin-bottom: 40px; font-weight: 600"><%= @@juego.get_siguiente_pregunta.get_pregunta %><h1>

	<!--<form method="post" action="/">
	  Respuesta: <input type="text" name="respuesta" />
	  <input type="submit" value="Responder" />
	</form>
	-->
	<form method="post" action="/">
		<% @@juego.get_siguiente_pregunta.get_respuestas.each_with_index do |resp, i| %>
		
		<div class="col-md-12" style="margin-left: 46%">
			<input id="respuesta_<%= i %>" name="respuesta" value="<%= i %>" type="radio"> <%= resp %>
		</div>
		<% end %>
<div class="col-md-12" style="display: flex; justify-content: center; margin-top: 20px">
	  <input type="submit" value="Responder" />
</div>
	</form>
	<% if defined?(@resultado) %>
	  <p style="display: flex; justify-content: center; font-size: 60px; font-weight: 600; color: <%= @resultado == 'Correcto' ? 'green' : 'red' %>"><%= @resultado.upcase %>!</p>
	<% end %>
</body>
